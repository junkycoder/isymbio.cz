{
    "source": "src",
    "destination": "web",
    "clean": true,
    "plugins": {
        "metalsmith-collections": {
            "news": {
                "pattern": "novinky/*.md",
                "sortBy": "date",
                "reverse": true
            }
        },
        "metalsmith-markdown": true,
        "metalsmith-permalinks": {
            "pattern": ":type/:name.html",
            "relative": false
        },
        "metalsmith-pagination": {
            "collections.news": {
                "perPage": 999,
                "layout": "default.hbs",
                "first": "novinky/index.html",
                "path": "novinky/:num/index.html",
                "pageMetadata": {
                    "title": "Novinky"
                }
            }
        },
        "metalsmith-feed": {
            "collection": "news",
            "destination": "feed.xml",
            "limit": 20,
            "title": "Symbio Novinky",
            "description": "Nejnovější zprávy ze světa SYMBIO Access devices",
            "site_url": "https://isymbio.cz/"
        },
        "metalsmith-register-helpers": {
            "directory": "helpers"
        },
        "metalsmith-fingerprint-ignore": {
            "pattern": "assets/*.css"
        },
        "metalsmith-layouts": {
            "default": "default.hbs",
            "engine": "handlebars",
            "pattern": "**/*.html"
        }
    }
}
